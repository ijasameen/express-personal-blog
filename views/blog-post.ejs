<h1><%- locals.post.title %></h1>
<ul class="prop-list" role="list">
  <li class="prop-item">
    <span>Created</span>
    <span><%- locals.post.getCreatedDateString() %></span>
  </li>
  <li class="prop-item">
    <span>Updated</span>
    <span><%- locals.post.getUpdatedDateString() %></span>
  </li>
  <% if (locals.post.tags.length > 0) { %>
  <li class="prop-item">
    <span>Tags</span>
    <ul class="flex" role="list">
      <% locals.post.tags.forEach(tag => { %>
      <li class="tag"><%- tag %></li>
      <% }) %>
    </ul>
  </li>
  <% } %>
</ul>

<p class="blog-post-content"><%- locals.post.content %></p>
